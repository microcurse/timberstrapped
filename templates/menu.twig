{% if menu %}
	<ul class="navbar-nav">
	{% for item in menu %}
		<li class="{{ item.classes | join(' ') }} nav-item">
			<a class="nav-link" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
		</li>
	{% if item.children %}
        <li class="nav-item dropdown">
			<div class="dropdown-menu" aira-labelledby="navbarDropdownMenuLink">
				{% for child in item.children %}
					<a class="nav-drop-item" href="{{ child.link }}">{{ child.title }}</a>
				{% endfor %}
			</div>
		</li>
    {% endif %}
	{% endfor %}
	</ul>
{% endif %}
